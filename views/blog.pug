

extends home1

block content

    -data = data || {}

    |

    if errors
        ul.error-list
            li(class = "cat")
            each error in errors
                li  <span style="color: red;font-weight: bold;">!Error: </span> #{error.msg}


    h2(class="pig") Create new posts
    form(action = "/postBlog" method = "POST" class = "form-registration")
        label(for="name") Name:
        input(
            type = "text"
            id = "name"
            name = "name"
            class = "form-control"
            value = data.title
        )

        label Email:
        input(
            type = "email"
            id = "content"
            name = "email"
            class = "form-control"
            value = data.content
        )
        label(for="username") Username:
        input(
            type = "username"
            id = "username"
            name = "username"
            class = "form-control"
            value = data.username
        )
        label(for="password") Password:
        input(
            type = "password"
            id = "password"
            name = "password"
            class = "form-control"
            value = data.password
        )
        input(
            type = "submit"
            value = "Register"
            class = "btn btn-lg btn-primary btn-block"
        )

